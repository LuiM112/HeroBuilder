<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<title>Final Team Project</title>
</head>
<body>
  <h1>Update Users</h1>

  <div class="updateUser">
  <form action="/updateUsers" method="POST">
    Username:
    <input type="text" name="username" placeholder="Update Username" value="<%=users[0].username%>">
    <br>


    isAdmin:
    <label>Admin<input 
                 <%if(users[0].isAdmin == '1') { %>

                   checked
                 <% } %> 
                   type="radio" name="isAdmin" id="A" value="1"
></label>
    <label>Non-Admin<input 
                   <%=(users[0].isAdmin == '0')?"checked":""%>
                   type="radio" name="isAdmin" id="N" value="0"
></label>
    <br>
    <input type="hidden" name="userId" value="<%=users[0].userId%>">

    <button> Update User</button>
  </form>
                 </div>                 

    
</body>
</html>