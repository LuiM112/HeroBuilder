<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Lab 8: Admin Section</title>
  <link href="/css/style.css" rel="stylesheet">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
 <h1> Welcome to Hero Builder</h1>
 <h1> Your Team(s) </h1>
  <% for(i = 0; i < teams.length; i++){ %>
    <div id="teamcard" class="card">
      <div class="card-body">
        <h3 class="card-title">Team Name: <%= teams[i].name %></h3>
        <h4 class="team-size">Team Size: <%= teams[i].size %></h4>
        <a href="/editTeam?id=<%=teams[i].teamId %>"><img src="/images/editPow.png" style="height:50px;"></a>
        <br>
        <a href="/deleteTeam?id=<%=teams[i].teamId %>"><img src="/images/deletePow.png" style="height:50px;"></a>
      </div>
    </div>
  <% } %>
</body>
</html>